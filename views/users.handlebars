<div class="box">
    <div class="columns">
        <div class="column">
            <h2>Sign up to start adding to your collection</h2>
            <div class="field">
                <label class="label">Email</label>
                <div class="control">
                    <input class="input" type="email" id="email" placeholder="e.g. alexsmith@gmail.com">
                </div>
            </div>
            <div class="field">
                <label class="label">Password</label>
                <div class="control">
                    <input class="input" type="text" id="pswrd" placeholder="e.g !P@$$w0rd123.">
                </div>
            </div>
            <div class="control">
                <button class="button is-primary" id="sign-up" type="submit">Sign Up</button>
            </div>

        </div>
        <div class="column">
            <h2>Log in to see your collection</h2>
             <div class="field">
                <label class="label">Email</label>
                <div class="control">
                    <input class="input" type="email" id="password" placeholder="e.g. alexsmith@gmail.com">
                </div>
            </div>
            <div class="field">
                <label class="label">Password</label>
                <div class="control">
                    <input class="input" type="text" placeholder="e.g !P@$$w0rd123.">
                </div>
            </div>
            <div class="control">
                <button class="button is-info" id="submit-btn" type="submit">Login</button>
            </div>
        </div>
    </div>
</div>

